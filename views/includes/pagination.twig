{% if (total / model.numberPerPage)|ceil > 1 %}
	<div class="dataTables_paginate paging_simple_numbers">
		<ul class="pagination">
			<li><a href="{{ path('contents-page', { modelId: model.id, pageNum: 1, sort: sort, order: order }) }}{{ app.get.requestURI }}"><i class="fa fa-angle-double-left"></i></a></li>
			<li><a href="{{ path('contents-page', { modelId: model.id, pageNum: max(1, pageNum - 1), sort: sort, order: order }) }}{{ app.get.requestURI }}"><i class="fa fa-angle-left"></i></a></li>
			{% for i in 1..(total / model.numberPerPage)|ceil %}
				<li {% if i == pageNum %}class="active"{% endif %}><a href="{{ path('contents-page', { modelId: model.id, pageNum: i, sort: sort, order: order }) }}{{ app.get.requestURI }}">{{ i }}</a></li>
			{% endfor %}
			<li><a href="{{ path('contents-page', { modelId: model.id, pageNum: min((total / model.numberPerPage)|ceil, pageNum + 1), sort: sort, order: order }) }}{{ app.get.requestURI }}"><i class="fa fa-angle-right"></i></a></li>
			<li><a href="{{ path('contents-page', { modelId: model.id, pageNum: (total / model.numberPerPage)|ceil, sort: sort, order: order }) }}{{ app.get.requestURI }}"><i class="fa fa-angle-double-right"></i></a></li>
		</ul>
	</div>
{% endif %}